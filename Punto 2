from enum import Enum

class TipoPlaneta(Enum):
    GASEOSO = 1
    TERRESTRE = 2
    ENANO = 3

class Planeta:
    def __init__(self, nombre=None, cantidad_satelites=0, masa=0, volumen=0,
                 diametro=0, distancia_sol=0, tipo=None, es_observable=False,
                 periodo_orbital=0, periodo_rotacion=0):  # 游댳 agregamos estos dos 칰ltimos par치metros nuevos

        self.nombre = nombre
        self.cantidad_satelites = cantidad_satelites
        self.masa = masa
        self.volumen = volumen
        self.diametro = diametro
        self.distancia_sol = distancia_sol
        self.tipo = tipo
        self.es_observable = es_observable
        self.periodo_orbital = periodo_orbital      
        self.periodo_rotacion = periodo_rotacion    

    def imprimir(self):
        print("Nombre del planeta =", self.nombre)
        print("Cantidad de sat칠lites =", self.cantidad_satelites)
        print("Masa del planeta =", self.masa)
        print("Volumen del planeta =", self.volumen)
        print("Di치metro del planeta =", self.diametro)
        print("Distancia al sol =", self.distancia_sol)
        print("Tipo de planeta =", self.tipo.name if self.tipo else "No definido")
        print("Es observable =", self.es_observable)

        # 游댳 imprimimos los nuevos atributos agregados
        print("Periodo orbital (a침os) =", self.periodo_orbital)
        print("Periodo de rotaci칩n (d칤as) =", self.periodo_rotacion)

    def calcular_densidad(self):
        if self.volumen == 0:
            return 0  # 游댳 protecci칩n contra divisi칩n por cero
        return self.masa / self.volumen

    def es_planeta_exterior(self):
        limite = 149597870 * 3.4  # 3.4 UA en kil칩metros
        return self.distancia_sol > limite

#imprimimos
if __name__ == "__main__":
    # 游댳 agregamos los valores de periodo orbital y rotaci칩n al final
    tierra = Planeta("Tierra", 1, 5.9736E24, 1.08321E12, 12742,
                     150000000, TipoPlaneta.TERRESTRE, True,
                     1.0, 0.997)

    jupiter = Planeta("J칰piter", 79, 1.899E27, 1.4313E15, 139820,
                      750000000, TipoPlaneta.GASEOSO, True,
                      11.86, 0.41)

    tierra.imprimir()
    print("Densidad del planeta =", tierra.calcular_densidad())
    print("쮼s planeta exterior?", tierra.es_planeta_exterior())

    print()

    jupiter.imprimir()
    print("Densidad del planeta =", jupiter.calcular_densidad())
    print("쮼s planeta exterior?", jupiter.es_planeta_exterior())
